html {
  font-size: 14px;
}

body {
  color: black;
  margin: 0;
  font-size: 1rem;
  line-height: 1.7;
}

* {
  box-sizing: border-box;
}

h1, h2, h3, h4, h5, ul, table, figure {
  font-weight: normal;
  margin: 0;
}

.font-hei {font-family: -apple-system, "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "PingFang SC", "Hiragino Sans GB", "Source Han Sans CN", "Source Han Sans SC", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif;}
.font-kai {font-family: Baskerville, Georgia, "Liberation Serif", "Kaiti SC", STKaiti, "AR PL UKai CN", "AR PL UKai HK", "AR PL UKai TW", "AR PL UKai TW MBE", "AR PL KaitiM GB", KaiTi, KaiTi_GB2312, "TW\-Kai", serif;}
.font-song {font-family: Georgia, "Nimbus Roman No9 L", "Songti SC", STSong, "AR PL New Sung", "AR PL SungtiL GB", NSimSun, SimSun, "TW\-Sung", "WenQuanYi Bitmap Song", "AR PL UMing CN", "AR PL UMing HK", "AR PL UMing TW", "AR PL UMing TW MBE", PMingLiU, MingLiU, serif;}
.font-fang-song {font-family: Baskerville, "Times New Roman", "Liberation Serif", STFangsong, FangSong, FangSong_GB2312, "CWTEX\-F", serif;}

a {
  color: black;
  &:hover, &:active {
    color: #2a6496;
    text-decoration: underline;
  }
}

.container {
  max-width: 500px;
  margin: 0 auto;
}

.alert-warning {
  background-color: #FEEFB3
  padding: 10px;
  border-radius: 4px;
  margin-bottom: 20px;
  border: 1px solid #e0cb79;
}

h2.hr {
  hr_h2()
}

.post-list {
  padding-left: 0;
  list-style: none;
  margin-top: 20px;
  .post-item {
    overflow: hidden;
    &:hover {
      .post-time {
        color: #999;
      }
    }
    .post-title {
      margin: 0 0 10px;
    }
    .post-time {
      float: right;
      color: #ccc;
      padding-left: 8px;
    }
  }
}

.content {
  padding-top: 30px;
  padding-bottom: @padding-top;
}


.post-content {
  line-height: 1.75;
  font-size: 16px;

  p, ul, ol {
    margin: 0 0 20px;
  }

  pre {
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
    padding: 10px;
    word-break: break-all;
    word-wrap: break-word;
  }
  h2 {
    hr_h2()
  }
}

.home-header, .post-header {
  border-bottom: 1px solid #e2e2e2;
}

.home-header, .post-header, .footer {
  background-color: #eee;
  padding: 20px 50px;
  position: relative;
}

.footer {
  border-top: 1px solid #e2e2e2;
  color: #888;
  a {
    color: @color;
  }
}

.post-header {
  &:hover {
    .home-icon {
      visibility: visible;
    }
  }

  &.exit {
    .home-icon {
      visibility: visible;
    }
  }

  .home-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    visibility: hidden;

    &:hover {
      svg {
        color: black;
      }
    }

    svg {
      color: #666;
      width: 30px;
      height: @width;
    }
  }

  .post-title {
    margin: 0;
    font-size: 2rem;
  }
  .post-subtitle {
    margin: 0;
    font-size: 1rem;
    color: #666;
    margin-top: 1rem;
  }
}

@media (max-width: 768px) {
  .home-header, .post-header, .footer {
    padding-left: 0;
    padding-right: @padding-left;
  }

  .container {
    padding-left: 10px;
    padding-right: @padding-left;
  }

  .home-icon {
    display: none;
  }
}
