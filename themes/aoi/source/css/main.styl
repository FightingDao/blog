html {
  font-size: 16px;
}

body {
  color: black;
  margin: 0;
  font-size: 1rem;
  line-height: 1.7;
  text-rendering: geometricPrecision;
}

* {
  box-sizing: border-box;
}

h1, h2, h3, h4, h5, ul, table, figure, p {
  font-weight: normal;
  margin: 0;
}

.font-hei {font-family: -apple-system, "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "PingFang SC", "Hiragino Sans GB", "Source Han Sans CN", "Source Han Sans SC", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif;}
.font-kai {font-family: Baskerville, Georgia, "Liberation Serif", "Kaiti SC", STKaiti, "AR PL UKai CN", "AR PL UKai HK", "AR PL UKai TW", "AR PL UKai TW MBE", "AR PL KaitiM GB", KaiTi, KaiTi_GB2312, "TW\-Kai", serif;}
.font-song {font-family: Georgia, "Nimbus Roman No9 L", "Songti SC", STSong, "AR PL New Sung", "AR PL SungtiL GB", NSimSun, SimSun, "TW\-Sung", "WenQuanYi Bitmap Song", "AR PL UMing CN", "AR PL UMing HK", "AR PL UMing TW", "AR PL UMing TW MBE", PMingLiU, MingLiU, serif;}
.font-fang-song {font-family: Baskerville, "Times New Roman", "Liberation Serif", STFangsong, FangSong, FangSong_GB2312, "CWTEX\-F", serif;}

a {
  color: black;
  &:hover, &:active {
    color: #2a6496;
    text-decoration: underline;
  }
}

.container {
  max-width: 500px;
  margin: 0 auto;
}

.alert {
  padding: 10px;
  border-radius: 4px;
  margin-bottom: 20px;
  border: 1px solid;
}

.alert-warning {
  color: #8a6d3b;
  border-color: #e0cb79;
}

.alert-success {
  color: #3c763d;
  border-color: #d0e9c6;
}

h2.hr {
  hr_h2()
}

.content {
  padding-top: 40px;
  padding-bottom: @padding-top;

  .post-list {
    padding-left: 0;
    list-style: none;
    margin-top: 20px;
    .post-item {
      overflow: hidden;
      &:hover {
        .post-time {
          color: #999;
        }
      }
      .post-title {
        margin: 0 0 10px;
        a {
          text-decoration: none;
        }
      }
      .post-time {
        float: right;
        color: #ccc;
        padding-left: 8px;
      }
    }
  }
}


.post-content {
  line-height: 1.75;
  font-size: 16px;

  a {
    color: #e96900;
  }

  p, ul, ol {
    margin: 0 0 20px;
  }

  pre {
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
    padding: 10px;
    word-break: break-all;
    word-wrap: break-word;
  }
  h2 {
    hr_h2()
  }
}

.site-name {
  line-height: 1;
  a {
    color: #333;
    display: inline-block;
    background-color: #fff;
    border-radius: 3px;
    padding: 0 15px;
    border: 1px solid #ddd;
    font-size: 1rem;
    height: 40px;
    line-height: @height;
    box-shadow: 0 5px 0 #ccc;
    transition: transform .3s ease, box-shadow .3s ease;
    &:hover {
      transform: translateY(10px);
      box-shadow: 0 2px 0 #ccc;
    }
  }
}

.header-description {
  margin: 0;
  font-size: 1.25rem;
  margin-top: 5px;
  color: #999;
  li {
    a {
      font-size: 1rem;
      display: block;
      height: 40px;
      line-height: @height;
      color: @color;
      border-bottom: 3px solid #ccc;
      &:hover {
        color: #666;
        border-bottom-color: @color;
      }
    }
  }
}

.home-header, .post-header {
  border-bottom: 1px solid #e2e2e2;
  a {
    text-decoration: none;
  }
}

.home-header, .post-header, .footer {
  background-color: #eee;
  padding: 30px 50px;
  position: relative;
  p {
    position: relative;
  }
}

.home-header {
  ul {
    padding-left: 0;
    list-style: none;
    overflow: hidden;
    li {
      float: left;
      margin-right: 10px;    }
  }
}

.footer {
  border-top: 1px solid #e2e2e2;
  color: #888;
  a {
    color: @color;
  }
}

.post-header {
  &:hover {
    .home-icon {
      visibility: visible;
    }
  }

  &.exit {
    .home-icon {
      visibility: visible;
    }
  }

  .home-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    visibility: hidden;

    &:hover {
      svg {
        color: black;
      }
    }

    svg {
      color: #666;
      width: 30px;
      height: @width;
    }
  }

  .post-title {
    margin: 0;
    font-size: 2rem;
    line-height: 1.25;
  }
}

@media (max-width: 768px) {
  .home-header, .post-header, .footer {
    padding-left: 0;
    padding-right: @padding-left;
  }

  .container {
    padding-left: 10px;
    padding-right: @padding-left;
  }

  .home-icon {
    display: none;
  }
}
