mixin article(post)
  li.post-item
    span.post-time #{post.date.format('MM/DD/YYYY')}
    h4.post-title: a(href=url_for(post.path)) #{post.title.replace(/<(?:.|\n)*?>/gm, '')}

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    block title
      title= config.title
    if theme.rss
      link(rel='alternate', type='application/rss+xml', title=config.title href=theme.rss)
    block styles
      link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Droid+Sans")
      link(href="/css/style.css?v=#{config.version}" rel="stylesheet")
    block meta
      block meta.description
        meta(name="description" content=config.description)
