.post
  .post-header
    text-align center
    h2.post-title
      font-weight 400
    .post-meta
      margin-top 10px
      color #999
      font-size 12px
      .post-meta-sep
        margin 0 8px
  .post-content
    margin-top 30px
    line-height 30px
    font-family 'Helvetica Neue','Helvetica',Arial,'Hiragino Sans GB', 'Microsoft YaHei','SimSun','Droid Sans Fallback',sans-serif
    p()
    h2,h3,h4
      font-family "Helvetica Neue",'Helvetica',Arial, "Microsoft YaHei","STKaiti","Droid Sans Fallback",SimSun,serif
  .post-ccby
    padding-top 20px
    margin-top 50px
    color #999
    border-top 1px solid #f0f0f0
    font-size 13px
  .post-os
    cursor pointer
    background-color #f9f9f9
    border 1px solid #e2e2e2
    padding 5px 8px
    border-radius 2px
    color #999
    margin-top 30px
    display none
