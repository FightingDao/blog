mixin article(post)
  li.post-item
    h4.post-title: a(href=url_for(post.path)) #{post.title.replace(/<(?:.|\n)*?>/gm, '')}

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    block title
      title= config.title
    if theme.rss
      link(rel='alternate', type='application/rss+xml', title=config.title href=theme.rss)
    block styles
      link(href="/css/main.css?v=#{config.version}" rel="stylesheet")
    block meta
      block meta.description
        meta(name="description" content=config.description)
  body
    header.header
      h1.site-name
        a(href="/") e.z.
      ul.nav
        li
          a(href="/about.html" class=page.path === 'about.html' ? 'active' : '') about
        li
          a(href="/girls.html" class=page.path === 'girls.html' ? 'active' : '') girls
        li
          a(href="/donate.html" class=page.path === 'donate.html' ? 'active' : '') donate
        li.hide-on-small-screen
          a(href="/gf.html" class=page.path === 'gf.html' ? 'active' : '') girlfriend wanted
        li.dropdown-menu.hide-on-large-screen
          svg.nav-more-trigger(viewbox='0 0 32 32', width='32', height='32', fill='none', stroke='currentcolor', stroke-linecap='round', stroke-linejoin='round', stroke-width='1')
            circle(cx='7', cy='16', r='2')
            circle(cx='16', cy='16', r='2')
            circle(cx='25', cy='16', r='2')
          ul.dropdown-list
            li
              a(href="/gf.html") girlfriend wanted

    block page
    footer.footer
      .centered
        a.hide-on-mobile(href="https://creativecommons.org/licenses/by-nc-nd/4.0/deed.zh") CC BY-NC-ND 4.0
        span.hide-on-mobile &nbsp;
        span &copy;&nbsp;
        a(href="https://github.com/egoist") E.Z.
        span.hide-on-mobile &nbsp;
        a.hide-on-mobile(href="https://github.com/egoist/blog") Read the source code.
    block scripts
      div(style="display:none")
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-54857209-6', 'auto');
        ga('send', 'pageview');
