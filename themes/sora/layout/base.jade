mixin article(post)
  li.post-item
    h4.post-title: a(href=url_for(post.path)) #{post.title}

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    block title
      title= config.title
    if theme.rss
      link(rel='alternate', type='application/rss+xml', title=config.title href=theme.rss)
    block styles
      link(href="/css/main.css?v=#{config.version}" rel="stylesheet")
    block meta
      block meta.description
        meta(name="description" content=config.description)
  body
    header.header
      h1.site-name
        a(href="/") e.z.
      ul.nav
        li
          a(href="/about.html" class=page.path === 'about.html' ? 'active' : '') about
        li
          a(href="/contact.html" class=page.path === 'contact.html' ? 'active' : '') contact
        li
          a(href="/gf.html" class=page.path === 'gf.html' ? 'active' : '') girlfriend wanted
